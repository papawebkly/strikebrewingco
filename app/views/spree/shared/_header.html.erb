<div id="sidr">
    <ul>	
        <li>
        <%= link_to '#', class: "side-logo" do %>
            EStore
            <span class="logo-dot accent-bg"></span>
        <% end %>
        </li>
        <li class="active">
            <%= link_to 'Store', root_path %>
        </li>
        <li class="divider"><span></span></li>
        <li class="active">
            <%= link_to 'Privacy', root_path %>
        </li>
        <li class="active">
            <%= link_to 'Terms & conditions', root_path %>
        </li>
    </ul>

    <div class="side-social">
        <a href="#"><i class="fa fa-facebook"></i></a>
        <a href="#"><i class="fa fa-twitter"></i></a>
        <a href="#"><i class="fa fa-google-plus"></i></a>
        <a href="#"><i class="fa fa-pinterest"></i></a>
        <a href="#"><i class="fa fa-instagram"></i></a>
    </div>
</div>

<div class="nav-container">
    <nav class="navbar navbar-default">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse-navigation" aria-expanded="false">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                </button>
                <figure id="logo" class="columns six" data-hook><%= logo %></figure>
                <%#= link_to root_path, class: 'navbar-brand' do %>
                    <!--EStore<span class="logo-dot accent-bg"></span>-->
                <% #end %>
                <a href="#sidr" class="side-menu-opener mobile">
                    <div class="bars">
                        <span class="bar top"></span>
                        <span class="bar middle"></span>
                        <span class="bar bottom"></span>
                    </div>
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="collapse-navigation">
                <ul class="nav navbar-nav">
                    <li>
                        <%= link_to 'Home', root_path %>
                    </li>
                    
                    <% @taxonomies.each do |taxonomy| %>
                        <li class="dropdown">
                            <%= link_to "#", data: { toggle: "dropdown" }, "aria-haspopup" => 'true', "aria-expanded" => 'true', "role" => 'button', class: 'dropdown-toggle' do %>
                            <%= taxonomy.name %> <span class="fa fa-angle-down"></span>
                            <% end %>
                            <%= nav_tree(taxonomy.root, @taxon, 1) %>
                        </li>
                    <% end %>

                    <li><%= link_to 'Blog', '/blog' %></li>
                    <li><%= link_to 'About', '/about' %></li>
                    <li>
                        <%= link_to '/contact' do %>
                            <i class="fa fa-paper-plane"></i> Contact
                        <% end %>
                    </li>

                    <!--li><a href="./contact.html"><i class="fa fa-paper-plane"></i> Contact</a></li-->
                    <!--a href="#" class="menu-cart"><i class="fa fa-shopping-cart"></i> $0.00</a-->
                    <% if (current_order != nil) then %>
                    <li id="link-to-cart" data-hook>
                        <%= link_to spree.cart_path, class: 'menu-cart' do %>
                            <i class="fa fa-shopping-cart"></i>
                            <%= "(#{current_order.item_count}) #{current_order.display_total.to_html}"   %>
                        <% end %>
                    </li>
                    <% end %>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#sidr" class="side-menu-opener">
                            <div class="bars">
                                <span class="bar top"></span>
                                <span class="bar middle"></span>
                                <span class="bar bottom"></span>
                            </div>
                        </a>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container -->
    </nav>
</div>